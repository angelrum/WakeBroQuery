<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane prefHeight="500.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/9" xmlns:fx="http://javafx.com/fxml/1" fx:controller="system.controller.page.TicketEditPage.TicketEditPageController">
   <center>
      <TableView fx:id="ticketView" BorderPane.alignment="CENTER" editable="true">
         <columns>
            <TableColumn fx:id="passColumn" maxWidth="80.0" minWidth="80.0" text="Тип билета" />
            <TableColumn fx:id="nameColumn" prefWidth="121.0" text="Название" />
            <TableColumn fx:id="enableColumn" maxWidth="80.0" minWidth="80.0" text="Активность" />
            <TableColumn fx:id="equipmentColumn" maxWidth="80.0" minWidth="80.0" text="Снаряжение" />
            <TableColumn fx:id="durationColumn" maxWidth="80.0" minWidth="80.0" text="Длит. сета" />
            <TableColumn maxWidth="200.0" minWidth="200.0" prefWidth="200.0" text="Интервал">
               <columns>
                  <TableColumn fx:id="startTimeColumn" maxWidth="60.0" minWidth="60.0" prefWidth="60.0" text="с" />
                  <TableColumn fx:id="endTimeColumn" maxWidth="60.0" minWidth="60.0" prefWidth="60.0" text="по" />
               </columns>
            </TableColumn>
            <TableColumn prefWidth="122.0" text="Длительность абонемента">
               <columns>
                  <TableColumn prefWidth="63.0" text="Фиксированная длит.">
                     <columns>
                        <TableColumn fx:id="startDateColumn" maxWidth="150.0" minWidth="90.0" prefWidth="90.0" text="Дата начала" />
                        <TableColumn fx:id="endDateColumn" maxWidth="150.0" minWidth="90.0" prefWidth="90.0" text="Дата окончания" />
                     </columns>
                  </TableColumn>
                  <TableColumn fx:id="monthColumn" maxWidth="200.0" minWidth="100.0" prefWidth="100.0" text="Кол-во месяцев" />
               </columns>
            </TableColumn>
            <TableColumn fx:id="costColumn" maxWidth="120.0" minWidth="80.0" prefWidth="90.0" text="Стоимость" />
            <TableColumn fx:id="weekcostColumn" maxWidth="150.0" minWidth="120.0" prefWidth="120.0" text="Стоимость в вых." />
         </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
         <padding>
            <Insets bottom="50.0" />
         </padding>
      </TableView>
   </center>
   <bottom>
      <ButtonBar prefHeight="40.0" prefWidth="200.0" BorderPane.alignment="CENTER">
        <buttons>
            <Button mnemonicParsing="false" text="Сохранить" />
            <Button mnemonicParsing="false" text="Отменить" />
        </buttons>
         <BorderPane.margin>
            <Insets right="20.0" />
         </BorderPane.margin>
      </ButtonBar>
   </bottom>
</BorderPane>
